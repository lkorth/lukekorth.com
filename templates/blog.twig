{% extends 'base.twig' %}

{% block main %}
<!-- posts list -->
<div id="posts-list">

    <h2 class="page-heading"><span>BLOG</span></h2>
    {% for post in posts %}
        <article class="format-standard">
            <div class="entry-date"><div class="number">{{ post.date|date('d') }}</div>
                <div class="year">{{ post.date|date('M, Y') }}</div></div>
            <div class="feature-image">
                <a href="/img/slides/01.jpg" data-rel="prettyPhoto"><img src="/img/slides/01.jpg" alt="Alt text" /></a>
            </div>
            <h2  class="post-heading"><a href="/blog/{{ post.title }}">{{ post.title }}</a></h2>
            <div class="excerpt">{{ post.text|max_words(80, '...')|markdown }}</div>
            <a href="single.html" class="read-more">continue &#8594;</a>
            <div class="meta">
                <div class="categories">In <a href="#">Category 1</a>, <a href="#">Category 2</a></div>
                <div class="comments"><a href="#">{{ post.ownComment.count }} {% if post.ownComment.count == 1 %}comment{% else %}comments{% endif %}</a></div>
                <div class="user"><a href="{{ post.author.id }}">By {{ post.author }}</a></div>
            </div>
        </article>
    {% endfor %}

    <!-- page-navigation -->
    <div class="page-navigation clearfix">
        <div class="nav-next">
            <a  href="#">&#8592; Older Entries </a>
        </div>
        <div class="nav-previous">
            <a href="#">Newer Entries &#8594;</a>
        </div>
        <!--ENDS page-navigation -->

    </div>

</div>
<!-- ENDS posts list -->
{% endblock %}

